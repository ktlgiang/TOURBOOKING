<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.tourbooking.client.LoginController"
           prefWidth="480" prefHeight="420"
           style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">

    <VBox alignment="CENTER" spacing="20" styleClass="glass">

        <!-- Logo -->
        <StackPane alignment="CENTER">
            <Circle radius="35" fill="white" opacity="0.9"/>
            <ImageView fitWidth="32" fitHeight="32">
                <Image url="@../icons/user.png"/>
            </ImageView>
        </StackPane>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Chào mừng trở lại!" styleClass="title"/>
            <Label text="Đăng nhập để tiếp tục" styleClass="subtitle"/>
        </VBox>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-box">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@../icons/email.png"/>
            </ImageView>
            <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-box">
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@../icons/lock.png"/>
            </ImageView>
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="input-field"/>
        </HBox>

        <Button text="Đăng nhập" styleClass="btn" onAction="#onLogin"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Chưa có tài khoản?" styleClass="hint"/>
            <Hyperlink text="Đăng ký ngay" styleClass="link"/>
        </HBox>

    </VBox>
</StackPane>
